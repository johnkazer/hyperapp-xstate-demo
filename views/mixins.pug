mixin displayTab(showTab, tabName)
    if (showTab === tabName)
        div.tabContent.surround(id=tabName style={display: 'block'})
            block
    else
        div.tabContent(id=tabName style={display: 'none'})
            block
mixin createAudioButtons()
    each button in audioButtons
        - var display = button.active === audioState.value ? 'block' : 'none'
        button.btn.btn-primary(id=button.id onclick=button.action style={display: display}) #{button.txt}
mixin createVideoButtons()
    each button in videoButtons
        - var display = button.active === videoState.value ? 'block' : 'none'
        button.btn.btn-primary(id=button.id onclick=button.action style={display: display}) #{button.txt}
